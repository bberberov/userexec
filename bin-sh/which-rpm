for name in "$@"
do
	if [ -a "${name}" ]
	then
		rpm -qf "${name}"
	elif filepath=`which "${name}" 2>/dev/null`
	then
		rpm -qf "${filepath}"
	else
		echo "${name} not found"
	fi
done
