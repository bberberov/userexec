for name in "$@"
do
	if [ -a "${name}" ]
	then
		file "${name}"
	elif filepath=`which "${name}" 2>/dev/null`
	then
		ls --color=auto -lhd "${filepath}"
	else
		echo "${name} not found"
	fi
done
