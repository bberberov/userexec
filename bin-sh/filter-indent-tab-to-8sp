# Works up to a depth of 12 indentations

sed -e '
	s/^\t\t\t\t\t\t\t\t\t\t\t\t/                                                /
	s/^\t\t\t\t\t\t\t\t\t\t\t/                                            /
	s/^\t\t\t\t\t\t\t\t\t\t/                                        /
	s/^\t\t\t\t\t\t\t\t\t/                                    /
	s/^\t\t\t\t\t\t\t\t/                                /
	s/^\t\t\t\t\t\t\t/                            /
	s/^\t\t\t\t\t\t/                        /
	s/^\t\t\t\t\t/                    /
	s/^\t\t\t\t/                /
	s/^\t\t\t/            /
	s/^\t\t/        /
	s/^\t/    /
' < /dev/stdin
