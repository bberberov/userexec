pushd . > /dev/null
for src_path in "$@"
do
	echo "Looking for repos with remotes in ${src_path} ..."
	for with_remotes in $(find "$1" -type d -path '*.git/refs/remotes')
	do
		cd "${with_remotes}"
		if [ -n "$(git remote show)" ]
		then
			echo -ne '\e[1;31m'
			echo "${with_remotes%refs/remotes}"
			echo -ne '\e[1;30m'
			git remote -v show | grep '(fetch)'
			echo -ne '\e[0m'
			git fetch --all --dry-run
	#		git fetch --all
		fi
	done
done
popd > /dev/null
