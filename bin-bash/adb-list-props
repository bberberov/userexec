if   [[ "`adb get-state`" != 'device' ]]
then
	echo "ERROR: Default Android device is not available"
	exit 1
fi

adb shell 'getprop' | sed -e 's/\r//g; s/^\[//; s/\]: \[/: /; s/\]$//' | sort
